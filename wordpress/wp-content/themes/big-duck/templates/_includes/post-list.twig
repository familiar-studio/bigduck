{% if posts | length %}
<h2>{{ title }}</h2>
  <ul>
    {% for post in posts %}
    <a href="{{post.link}}">
      <li><article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section class="article-content">
          <h1 class="article-h1">{{post.title}}</h1>
          <div class="article-body">
            {{post.content}}
          </div>
        </section>
      </article></li>
    </a>
    {% endfor %}
  </ul>
{% endif %}
